.hero {
  display: inline-block;
  height: 750px;
  width: 100%;
  border: 0;
  margin: 0 0 50px 0;
  background-image: url(<%= asset_path 'limitless.jpeg' %>)
}

.padded {
  margin: 50px 0 50px 0;
}

.hero-text {
  text-align: center;
  font-weight: bold;
  font-size: 35px;
  vertical-align: middle;
  margin: auto;
}

.hero-text p {
  color: white;
}
