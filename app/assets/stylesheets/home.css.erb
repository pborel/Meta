.hero {
  display: inline-block;
  position: relative;
  height: 725px;
  width: 100%;
  border: 0;
  margin: 0 auto;
  text-align: center;
  background-image: url(<%= asset_path 'limitless.jpeg' %>)
}

.padded {
  margin: 50px 0 50px 0;
}

.hero-text {
  font-weight: bold;
  font-size: 35px;
  vertical-align: middle;
  position: relative;
  margin: 0 auto;
  width: 100%;
  top: 37%;
  height: inherit;
}

.hero-text p {
  color: white;
  letter-spacing: 5px;
  padding: 20px;
}

.title h1 {
  margin: 0;
}
